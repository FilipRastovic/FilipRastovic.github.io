{
  "sass" : {
    "concat" : [
      "build/sass/variables.scss",
      "build/sass/mixins/**/*.scss",
      "node_modules/bootstrap-sass/assets/stylesheets/_bootstrap-sprockets.scss",
      "node_modules/bootstrap-sass/assets/stylesheets/_bootstrap.scss",
      "node_modules/font-awesome/css/font-awesome.css",
      "node_modules/magnific-popup/dist/magnific-popup.css",
      "build/sass/baseline/*.scss",
      "build/sass/utilities/*.scss",
      "build/sass/pages/**/*.scss",
      "build/css/**/**/*.css",
      "build/sass/modules/**/*.scss"
    ]
  },
  "javascript" : {
    "concat" : {
      "vendor" : [
       "node_modules/jquery/dist/jquery.js",
        "node_modules/bootstrap-sass/assets/javascripts/bootstrap.js",
        "node_modules/jquery-validation/dist/jquery.validate.js",
        "node_modules/jquery-validation/dist/additional-methods.js",
        "node_modules/magnific-popup/dist/jquery.magnific-popup.min.js"
      ],
      "third_party": [
        "build/third_party/js/**/*.js"
      ],
      "custom": [
        "build/js/modules/**/*.js"
      ]
    },
    "dependencies": [
      ".resources/js/concat/vendor.js",
      ".resources/js/concat/third_party.js",
      ".resources/js/concat/custom.js"
    ]
  }
}
